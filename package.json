    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.1",
    "mocha": "^7.0.1",
    "nodemon": "^2.0.2",
    "prettier": "1.19.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  }
